@using DevicesSales.Controllers
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Меню пользователя</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            text-align: center;
            padding: 20px;
            border: 2px solid #444;
            border-radius: 10px;
            background-color: #2a2a2a;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h1 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #ffcc00;
        }

        .links {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .btn {
            text-decoration: none;
            color: #ffffff;
            background-color: #ff4500;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #ff6500;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Меню пользователя</h1>
        <div class="links">
            <a href="SaleView" class="btn">Оформление заказа</a>
            <a href="CartView" class="btn">Корзина</a>
            <a href="@Url.Action(nameof(HomeController.FirstPage), "Home")"class ="btn">На главную</a>
        </div>
    </div>
</body>
</html>