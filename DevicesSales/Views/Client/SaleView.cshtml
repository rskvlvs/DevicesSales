@using DevicesSales.Controllers
@using DevicesSales.Features.DtoModels
@model SaleDto

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Выбор продукта</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 80%;
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background-color: #2a2a2a;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #ffcc00;
            margin-bottom: 20px;
            text-align: center;
        }

        .product {
            margin-bottom: 20px;
        }

            .product button {
                display: block;
                width: 100%;
                padding: 10px;
                background-color: #ff4500;
                color: #ffffff;
                border: none;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s ease;
                margin-bottom: 10px;
                cursor: pointer;
            }

                .product button:hover {
                    background-color: #ff6500;
                }

                .product button span {
                    font-weight: bold;
                    margin-right: 10px;
                }

        .footer-link {
            margin-top: 20px;
            text-align: center;
        }

            .footer-link a {
                color: #ff4500;
                text-decoration: none;
            }

                .footer-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>Выбор продукта</h2>
        @using (Html.BeginForm(nameof(ClientController.CreateSaleView), ClientController.route, FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="product">
                <button type="submit" name="ProductName" value="Наушники"><span>Наушники:</span> $50</button>
            </div>
            <div class="product">
                <button type="submit" name="ProductName" value="Мышка"><span>Мышка:</span> $30</button>
            </div>
            <div class="product">
                <button type="submit" name="ProductName" value="Коврик"><span>Коврик:</span> $20</button>
            </div>
            <div class="product">
                <button type="submit" name="ProductName" value="Клавиатура"><span>Клавиатура:</span> $70</button>
            </div>
        }
        <div class="footer-link">
            <a href="@Url.Action(nameof(HomeController.FirstPage), "Home")">На главную</a>
        </div>
    </div>
</body>
</html>