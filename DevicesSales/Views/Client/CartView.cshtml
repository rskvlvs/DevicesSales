@using DevicesSalesStorage.Models
@using DevicesSales.Controllers
@model IEnumerable<Sale>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Заказы пользователя</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e1e;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 80%;
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background-color: #2a2a2a;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #ffcc00;
            margin-bottom: 20px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            color: #ffffff;
        }

        td, th {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            color: #000; /* Черный цвет текста */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .footer-link {
            margin-top: 20px;
            text-align: center;
        }

            .footer-link a {
                color: #ff4500;
                text-decoration: none;
            }

                .footer-link a:hover {
                    text-decoration: underline;
                }

        .delete-button {
            background-color: #ff4500;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
        }

            .delete-button:hover {
                background-color: #ff6500;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Заказы пользователя</h2>
        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Название товара</th>
                        <th>Цена</th>
                        <th>Удалить</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td>@sale.ProductName</td>
                            <td>@sale.Price</td>
                            <td>
                                <form method="post" action="@Url.Action(nameof(ClientController.DeleteOrder), ClientController.route)">
                                    <input type="hidden" name="saleId" value="@sale.SaleId" />
                                    <button type="submit" class="delete-button">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>У пользователя нет заказов.</p>
        }
        <div class="footer-link">
            <a href="@Url.Action(nameof(HomeController.FirstPage), "Home")">На главную</a>
        </div>
    </div>
</body>
</html>